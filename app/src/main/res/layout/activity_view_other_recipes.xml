<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewOtherRecipeActivity"
    tools:context="com.fooding.userapp.activity.ViewOtherRecipes">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textColor="#111"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:text="company name" />

    <View
        android:id="@+id/title_bar"
        style="@style/title_bar" />

    <ListView
        android:id="@+id/otherRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:layout_above="@id/back"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_button"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/menu_bar"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="180dp"
        android:textColor="@color/yellowAccent"
        android:text="되 돌 아 가 기"/>

    <View
        android:id="@+id/menu_bar"
        style="@style/menu_bar" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="@dimen/menu_bar_margin"
        android:layout_alignParentBottom="true">

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/setting"
            android:src="@mipmap/settings" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/filter"
            android:src="@mipmap/filter" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/camera"
            android:src="@mipmap/camera" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/recentlyViewed"
            android:src="@mipmap/list" />

    </LinearLayout>

</RelativeLayout>