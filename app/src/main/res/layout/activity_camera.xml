<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.CameraActivity">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/my_page"
        android:layout_below="@+id/NFC">

    </com.journeyapps.barcodescanner.DecoratedBarcodeView>

    <Button
        android:id="@+id/my_page"
        android:backgroundTint="@color/button_default"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/filter"
        android:layout_alignStart="@+id/filter"
        android:text="my page"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/filter"
        android:backgroundTint="@color/button_default"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="filter"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/title"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NFC"
        android:layout_alignBottom="@+id/NFC"
        android:layout_centerHorizontal="true"
        android:text="QR CAMERA"
        android:textSize="23dp" />

    <Button
        android:id="@+id/NFC"
        android:backgroundTint="@color/button_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="NFC" />

    <Button
        android:id="@+id/viewrecipe"
        android:backgroundTint="@color/button_default"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:text="view recipe" />

</RelativeLayout>
